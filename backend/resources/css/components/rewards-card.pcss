.rewards-card:focus { outline: none }
.rewards-card .image { position: relative }
.rewards-card img { display: block; width: 100%; height: auto }
.rewards-card img.is-variant { opacity: 1; transition: 0.5s ease; backface-visibility: hidden }

.rewards-card .play-icon {
  transition: 0.5s ease;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}
